@model ComicBookGallery.Models.ComicBook

@{
    // This area is for C# code.
    ViewBag.Title = Model.DisplayText;
    
}

<h2>@Model.DisplayText</h2>

<div class="row">
    <div class="col-md-6">
        <div class="well">
            <h5><label>Series Title:</label> @Model.DisplayText</h5>
            <h5><label>Issue #:</label> @Model.IssueNumber</h5>
            <h5><label>Favorite:</label> @(Model.Favorite ? "Yes" : "No")</h5>
            @if (Model.Artists.Count != 0)
            {
                <h3>Artists: </h3>
                <ul>
                    @foreach (var artist in Model.Artists)
                    {
                        <li>
                            <text>@artist.Role, @artist.Name</text>
                        </li>
                    }
                </ul>
            }
        </div>
        <h5>Description</h5>
        <div>@Html.Raw(Model.Description)</div>
    </div>
    <div class="col-md-6">
        <img src="/Images/@Model.CoverPageImage"
             alt="@Model.DisplayText" class="img-responsive" />
    </div>
</div>



