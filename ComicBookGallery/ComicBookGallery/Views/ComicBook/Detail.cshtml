@model ComicBookGallery.Models.ComicBook

@{
    // This area is for C# code.
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.DisplayText;
    
}


<h1>@Model.SeriesTitle</h1>

<h2>Issue #@Model.IssueNumber</h2>

<h5>Description:</h5>
<div>@Html.Raw(Model.Description)</div>

    @if (Model.Artists.Count != 0)
    {
        <h3>Artists: </h3>
        <ul>
                @foreach (var artist in Model.Artists)
                {
                    <li>
                        <text>@artist.Role, @artist.Name</text>
                    </li>
                }
        </ul>
    }

